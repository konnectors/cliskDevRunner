{
  "name": "clisk-dev-runner",
  "version": "1.0.0",
  "description": "Projet simple pour tester les connecteurs clisk avec Playwright dans un environnement simulant React Native webview",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "start:extreme": "DEBUG=clisk:* node src/index.js",
    "start:full": "DEBUG=clisk:cli:*,clisk:launcher:*,clisk:pilot:*,clisk:worker:* node src/index.js",
    "start:normal": "DEBUG=clisk:cli:*,clisk:launcher:* node src/index.js",
    "start:quiet": "node src/index.js examples/evaluate-konnector quiet",
    "test": "node --test test/*.test.js",
    "test:extreme": "DEBUG=clisk:* node --test test/*.test.js",
    "test:full": "DEBUG=clisk:cli:*,clisk:launcher:*,clisk:pilot:*,clisk:worker:* node --test test/*.test.js",
    "test:normal": "DEBUG=clisk:cli:*,clisk:launcher:* node --test test/*.test.js",
    "test:watch": "node --test --watch test/*.test.js",
    "test:verbose": "node --test --test-reporter=spec test/*.test.js",
    "test:goto": "node --test --test-name-pattern=\"should use goto-konnector ensureAuthenticated\" test/*.test.js",
    "test:ping": "node --test --test-name-pattern=\"should load handshake connector and call ping function\" test/*.test.js",
    "test:multi": "node --test --test-name-pattern=\"should handle worker and pilot pages simultaneously\" test/*.test.js",
    "test:worker-control": "node --test --test-name-pattern=\"should allow pilot to control worker URL\" test/*.test.js"
  },
  "keywords": [
    "playwright",
    "connector",
    "react-native",
    "webview",
    "clisk"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "debug": "^4.4.1",
    "playwright": "^1.40.0",
    "post-me": "^0.4.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  }
}
